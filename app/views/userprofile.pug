extends layout
block content

    // Main container
    main
      section#user-hero
          h2 Settings
          h1 My Posts
          
          button#make-new-post-btn(onclick="makeNewPost()")
            img(src='public/images/addIcon.png' width='95' height='95')
    
    section.new-post
      div.new-post-header
        h3.new-post-title NEW POST
        img.new-post-exit(src='public/images/exit.png' width='50' height='50')
      
      // IMAGE upload GOES HERE
      div.new-post-img

      // action('/newPost.js')
      // enctype => multipart/form-data for images upload : MULTER IN APP.JS UPDATE : enctype='multipart/form-data'
      form.new-post-input(action="/new-post-form", method="post") 
        label.new-post-input-item(for="name") Item Name 
        input(type="text", name="name")

        label.new-post-input-item(for="location") Location 
        input(type="text", name="location")

        label.new-post-input-item(for="description") Description
        input(type="text", name="description")

        section.new-post-checkboxes
          // Make buttons instead 
          div.new-post-checkbox 
            input(type="checkbox" name="clothes")
            label(for="clothes") Clothing

          div.new-post-checkbox 
            input(type="checkbox" name="electronics")
            label(for="electronics") Electronics

          div.new-post-checkbox 
            input(type="checkbox" name="sport-equp")
            label(for="sport-equp") Sport Equip.

          div.new-post-checkbox 
            input(type="checkbox" name="student-id")
            label(for="student-id") Student ID

          div.new-post-checkbox 
            input(type="checkbox" name="clothes")
            label(for="other") Other

        button.new-post-input-button(type="submit") POST

    // Sidebar container
    #sidebar-user
        i.fa-solid.fa-circle-user(style='font-size:110px')
        h1 User Names
        span Items Found
        span Items Received
        p
            | Lorem ipsum dolor sit amet, consectetur adipisicing       elit. Ea, repellat dolore nisi, id omnis, necessitatibus     mollitia distinctio delectus soluta eveniet accusantium       quas veritatis aliquam! Ea architecto beatae inventore       qui quisquam?
        .icon
            i.fa.fa-thumbs-up(style='font-size:10px')
            | 90 Likes 
            br
            |  Upvotes
            br
            i.fa.fa-thumbs-down(style='font-size:10px')
            | 7 Dislikes 
            br
            |  Downotes
            
    // make posts clickable
    .posts
      // Posts
      for item in data
        .post-box
          h2 #{item.item_name}
          .post-box-image 
            p image goes here 
          .post-text
            .post-location
              img(src='public/images/location.png' width='17' height='20')
              p #{item.location}
            div #{item.date}

    script(src='/public/script/newPost.js')
    